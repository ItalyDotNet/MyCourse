<environment include="Development">
    <script src="~/lib/summernote/dist/summernote-bs4.min.js"></script>
    <script src="~/lib/summernote/dist/lang/summernote-it-IT.js"></script>
    <link rel="stylesheet" href="~/lib/summernote/dist/summernote-bs4.min.css">
</environment>
<environment exclude="Development">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-bs4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/lang/summernote-it-IT.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/summernote@0.8.15/dist/summernote-bs4.min.css">
</environment>
<script>
	$('[data-summernote]').summernote({
        //https://summernote.org/deep-dive/
        minHeight: 300,
        lang: 'it-IT',
        toolbar: [
            ['style', ['bold', 'italic']],
            ['para', ['ul', 'ol']],
            ['insert', ['video']],
            ['view', ['codeview']]
        ]
    });
</script>