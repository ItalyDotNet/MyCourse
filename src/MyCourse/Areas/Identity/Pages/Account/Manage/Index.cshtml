@page
@model IndexModel
@{
    ViewData["Title"] = "Profilo";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled>
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control">
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <h6>Privacy</h6>
            <div class="form-group">
                <input type="checkbox" class="form-check-input" checked disabled>
                <label class="form-check-label">Consenso per finalit√† ecommerce (<a asp-page="/Privacy" asp-fragment="ecommerce">leggi informativa</a>)</label>
                <div class="text-muted">Fornito il @Model.EcommerceConsent, data della tua registrazione.</div>
            </div>

            <div class="form-group">
                <input class="form-check-input" asp-for="Input.NewsletterConsent">
                <label class="form-check-label" asp-for="Input.NewsletterConsent">Iscrizione alla newsletter (<a asp-page="/Privacy" asp-fragment="newsletter">leggi informativa</a>)</label>
                @if (Model.NewsletterConsent is not null)
                {
                <div class="text-muted">Fornito il @Model.NewsletterConsent</div>
                }
            </div>


            <button id="update-profile-button" type="submit" class="btn btn-primary">Salva</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}